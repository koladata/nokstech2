<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @if (ViewData["Css"] != null)
    {
        <link rel="stylesheet" href="~/css/@ViewData["Css"]" asp-append-version="true" />
    } else if (ViewData["Css"] == null)
    {
        <link href="~/css/StyleSheet.css" rel="stylesheet" asp-append-version="true" />
    }
    @if (ViewData["Extra_Css"] != null)
    {
        <link rel="stylesheet" href="~/css/@ViewData["Extra_Css"]" asp-append-version="true" />
    }
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
